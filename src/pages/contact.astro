---
import Layout from '@/layouts/Layout.astro';
import Providers from '@/components/Providers';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import ContactSection from '@/components/ContactSection.astro';
---

<Layout title="Contact - Smart Auto" description="Contactează echipa Smart Auto pentru consultanță auto gratuită. Programează o întâlnire, solicită informații sau trimite-ne un mesaj pentru orice întrebare ai.">
  <Providers client:load>
    <div class="flex flex-col min-h-screen">
      <Header />
      <main class="flex-grow pt-24">
        <ContactSection />
      </main>
      <Footer />
    </div>
  </Providers>
</Layout> 