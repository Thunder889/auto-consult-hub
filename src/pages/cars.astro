---
import Layout from '@/layouts/Layout.astro';
import Providers from '@/components/Providers';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import CarsSection from '@/components/CarsSection.astro';
---

<Layout title="Mașini Disponibile - Smart Auto" description="Descoperă selecția noastră de mașini premium verificate, cu istoric complet și documentație transparentă. Alege vehiculul perfect pentru nevoile tale.">
  <Providers client:load>
    <div class="flex flex-col min-h-screen">
      <Header />
      <main class="flex-grow pt-24">
        <CarsSection fullPage={true} />
      </main>
      <Footer />
    </div>
  </Providers>
</Layout> 