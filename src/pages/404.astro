---
import Layout from '@/layouts/Layout.astro';
import Providers from '@/components/Providers';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
---

<Layout title="Pagină negăsită - Smart Auto">
  <Providers client:load>
    <div class="flex flex-col min-h-screen">
      <Header />
      <main class="flex-grow flex items-center justify-center p-4">
        <div class="text-center max-w-xl mx-auto py-20">
          <h1 class="text-5xl font-bold text-primary mb-6">404</h1>
          <h2 class="text-2xl font-semibold mb-4">Pagină negăsită</h2>
          <p class="text-gray-600 mb-8">Ne pare rău, pagina pe care o căutați nu există sau a fost mutată.</p>
          <a href="/" class="bg-primary text-white font-medium px-6 py-3 rounded-full hover:bg-primary/90 transition-colors">
            Înapoi la pagina principală
          </a>
        </div>
      </main>
      <Footer />
    </div>
  </Providers>
</Layout> 