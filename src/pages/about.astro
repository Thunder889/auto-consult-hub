---
import Layout from '@/layouts/Layout.astro';
import Providers from '@/components/Providers';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import AboutSection from '@/components/AboutSection.astro';
---

<Layout title="Despre Noi - Smart Auto" description="Descoperiți povestea Smart Auto, echipa noastră de experți în consultanță auto și cum vă putem ajuta să găsiți mașina ideală printr-un serviciu personalizat.">
  <Providers client:load>
    <div class="flex flex-col min-h-screen">
      <Header />
      <main class="flex-grow pt-24">
        <AboutSection />
      </main>
      <Footer />
    </div>
  </Providers>
</Layout> 