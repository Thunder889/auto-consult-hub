---
import Layout from '@/layouts/Layout.astro';
import Providers from '@/components/Providers';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import ServicesSection from '@/components/ServicesSection.astro';
---

<Layout title="Servicii - Smart Auto" description="Explorați serviciile noastre complete de consultanță auto: căutare personalizată, verificare tehnică, negociere și asistență în procesul de achiziție a mașinii.">
  <Providers client:load>
    <div class="flex flex-col min-h-screen">
      <Header />
      <main class="flex-grow pt-24">
        <ServicesSection fullPage={true} />
      </main>
      <Footer />
    </div>
  </Providers>
</Layout> 